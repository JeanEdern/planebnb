<div class="row">
    <div class="col-sm-3 right">
      <div id="carousel" class="carousel slide">
        <div class="carousel-inner">
          <div class="item active">
            <%= image_tag plane.picture.url(:medium) %>
            <div class="carousel-caption"></div>
          </div>
          <% if plane.second_picture? || plane.third_picture? %>
            <% if plane.second_picture? %>
              <div class="item">
                <%= image_tag plane.second_picture.url(:medium) %>
              </div>
            <% end %>
            <% if plane.third_picture? %>
              <div class="item">
                <%= image_tag plane.third_picture.url(:medium) %>
              </div>
            <% end %>
            <a class="right carousel-control" href="#carousel" data-slide="next" onclick="$('#carousel').carousel('next')"></a>
            <a class="left carousel-control" href="#carousel" data-slide="prev" onclick="$('#carousel').carousel('prev')"></a>
          <% end %>
        </div>
      </div>

    </div>
    <div class="col-md-7 col-md-offset-1">
      <div>
        <ul class="list-inline list-unstyle">
          <li> <%= render 'book_form', booking: @booking, plane: plane %> </li>
        </ul>
      </div>

      <div class="card bg-white">
        <blockquote>
          <p> <%= plane.description.capitalize %></p>
        </blockquote>
      </div>

      <table class="table table-striped">
        <tr>
          <td>Aeroclub de base</td>
          <td><%= plane.aeroclub %></td>
        </tr>
        <tr>
          <td>Aérodrome</td>
          <td><%= plane.address %></td>
        </tr>
        <tr>
          <td>Nombre de sièges</td>
          <td>
            <% plane.seat.times do %>
              <i class="fa fa-male"></i>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>Prix de réservation (indicatif)</td>
          <td><%= plane.price %> <i class="fa fa-eur"></i> </td>
        </tr>
        <tr>
          <td>Avion enregistré depuis</td>
          <td><%= plane.created_at.strftime("%d %B %Y") %></td>
        </tr>
        <tr>
          <td>Dernière mise à jour de l'annonce</td>
          <td><%= plane.updated_at.strftime("%d %B %Y") %></td>
        </tr>
      </table>

      <!-- description -->
      <!-- seats -->
      <!-- picture -->
      <!-- aeroclub -->
      <!-- price -->
    </div>
  </div>
