<div class="row">
    <div class="col-sm-2 right">
        <%= image_tag plane.picture.url(:medium),  class: "img-thumbnail" %>
    </div>
    <div class="col-md-7 col-md-offset-1">
      <div>
        <ul class="list-inline list-unstyle">
          <li><%= link_to "Mettre à jour l'annonce", edit_profile_plane_path(plane), class: "btn btn-primary" %></li>
          <li><%= link_to "Supprimer l'annonce", profile_plane_path(plane), class: "btn btn-danger", method: :delete, data: { confirm: "Etes-vous sûr de vouloir supprimer définitivement l'annonce?" } %></li>
        </ul>
      </div>

      <div class="card bg-white">
        <blockquote>
          <p> <%= plane.description %></p>
        </blockquote>
      </div>

      <table class="table table-striped">
        <tr>
          <td>Aeroclub de base</td>
          <td><%= plane.aeroclub %></td>
        </tr>
        <tr>
          <td>Nombre de sièges</td>
          <td>
            <% plane.seat.times do %>
              <i class="fa fa-male"></i>
            <% end %>
          </td>
        </tr>
        <%= render 'booking_status', plane: plane %>
        <tr>
          <td>Prix de réservation (indicatif)</td>
          <td><%= plane.price %> <i class="fa fa-eur"></i> </td>
        </tr>
        <tr>
          <td>Avion enregistré depuis</td>
          <td><%= plane.created_at.strftime("%d %B %Y") %></td>
        </tr>
        <tr>
          <td>Dernière mise à jour de l'annonce</td>
          <td><%= plane.updated_at.strftime("%d %B %Y") %></td>
        </tr>
      </table>
    </div>
  </div>